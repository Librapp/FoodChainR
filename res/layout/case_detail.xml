<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_case_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/iv_case_detail_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/about"
            android:padding="5dp"
            android:scaleType="fitXY" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_case_detail_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/about"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/ll_case_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_case_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/red"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_case_detail_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/red"
                android:textSize="28sp" />
        </LinearLayout>
        <Button
            android:id="@+id/b_case_detail_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="@string/edit" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_case_detail_intro"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top|left"
        android:text="@string/intro" />
</LinearLayout>