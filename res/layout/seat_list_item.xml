<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants" >
    <LinearLayout
        android:id="@+id/seat_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/seat_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seat_icon_default" />
        <TextView
            android:id="@+id/seat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/seat_status"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/seat_customer"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/seat_clean"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seat_clean" />
        <ImageView
            android:id="@+id/seat_order"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seat_order_normal" />
        <ImageView
            android:id="@+id/seat_pay"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seat_pay_normal" />
    </LinearLayout>
</RelativeLayout>